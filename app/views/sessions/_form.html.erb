<div class="row ">
  <div class="col-md-12 text-center">
    <%= form_for :session, url: login_path do |f| %>
      <div class="form-group">
        <div class="control-label offset-md-3 col-md-6">
          <%= f.label :email, "EMAIL:" %>
        </div>
        <div class="offset-md-3 col-md-6">
          <%= f.email_field :email, class: "form-control", placeholder: "Podaj email..", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label offset-md-3 col-md-6">
          <%= f.label :password, "HASŁO:" %>
        </div>
        <div class="offset-md-3 col-md-6">
          <%= f.password_field :password, class: "form-control", placeholder: "Podaj hasło..", autocomplete: "off" %>
        </div>
      </div>
      <div class="form-group offset-md-3 col-md-6">
        <%= f.submit "Zaloguj się", class: "form-control btn btn-info "%> <br>
                </div>
    <% end %>
  </div> 
</div> 
